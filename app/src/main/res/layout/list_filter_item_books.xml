<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_filter_card_img"
        android:layout_width="180dp"
        android:layout_height="290dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tbate" />

    <Button
        android:id="@+id/btn_filter_card_title"
        android:layout_width="180dp"
        android:layout_height="83dp"
        android:paddingVertical="10dp"
        android:text="@string/tv_card_title"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/iv_filter_card_img"
        app:layout_constraintTop_toBottomOf="@+id/iv_filter_card_img" />

</androidx.constraintlayout.widget.ConstraintLayout>